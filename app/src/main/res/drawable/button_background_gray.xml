<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="oval">  <!-- Oval shape -->
            <solid android:color="#80000000" />  <!-- Transparent gray for pressed state -->
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="12dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="oval">  <!-- Oval shape -->
            <solid android:color="#80000000" />  <!-- Transparent gray for default state -->
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp" />
        </shape>
    </item>
</selector>
